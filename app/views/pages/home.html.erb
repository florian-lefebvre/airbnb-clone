<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_url 'banner.jpg'%>);">
  <div class="container">
    <h1>Rent-a-car <strong>All the top cars in one place</strong>!</h1>
    <p>Book your car asap</p>
    <%= link_to "Search for a car", cars_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<div class="container">
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-5 my-5">
    <% @cards.each do |card| %>
      <div class="col">
        <div class="card h-100">
          <%= image_tag card[:image], class: "card-img-top", alt: "#{card[:title]} image", height: 225, style: "object-fit: cover;" %>
          <div class="card-body">
            <h5 class="card-title fw-bolder"><%= card[:title] %></h5>
            <p class="card-text"><%= card[:description] %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
