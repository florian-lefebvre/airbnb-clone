<%= render "devise/shared/layout", title: "Log in", url: session_path(resource_name) do |f| %>
  <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
<% end %>
