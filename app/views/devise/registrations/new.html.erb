<%= render "devise/shared/layout", title: "Sign up", url: registration_path(resource_name) do |f| %>
  <%= f.input :first_name,
                required: true,
                autofocus: true%>
  <%= f.input :last_name,
                required: true,
                autofocus: true%>
  <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
  <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
  <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
<% end %>
