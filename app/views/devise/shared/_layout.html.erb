<% label ||= title %>
<% method ||= nil %>
<div class="container-sm p-4">
  <h1 class="text-center"><%= title %></h1>
  <div class="row justify-content-center mt-3">
    <%= simple_form_for(resource, as: resource_name, url:, html: { class: "col-12 col-sm-5 card rounded-3 p-4", method: }) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= yield f %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, label, class: "btn btn-primary btn-lg w-100" %>
      </div>
    <% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>
