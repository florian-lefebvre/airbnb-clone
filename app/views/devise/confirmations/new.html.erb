<%= render "devise/shared/layout", title: "Resend confirmation instructions", label: "Resend", url: confirmation_path(resource_name) do |f| %>
  <%= f.full_error :confirmation_token %>
  <%= f.input :email,
                required: true,
                autofocus: true,
                value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
                input_html: { autocomplete: "email" } %>
<% end %>
